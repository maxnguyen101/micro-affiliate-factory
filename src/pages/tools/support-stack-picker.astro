  { id: 'lean', label: 'Lean Support', rules: ['small team', 'email-first', 'basic sla', 'low setup', 'lean budget'] },
  { id: 'growth', label: 'CX Growth', rules: ['mid team', 'chat+email', 'moderate sla', 'medium setup', 'balanced budget'] },

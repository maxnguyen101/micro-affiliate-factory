<body><main class="container">
<nav class="page-nav" aria-label="Page navigation"><a href="/">Home</a><a href="/dashboard">Dashboard</a><a href="/money/best-helpdesk-live-chat-stack-for-small-teams">Top comparison</a></nav>
<h1>Support Stack Picker</h1>
<p>Pick your constraints and get a help desk + live chat stack profile.</p>
<div class="grid">
  <div class="card"><label>Team size</label><select id="team"><option>small team</option><option>mid team</option><option>large team</option></select></div>
  <div class="card"><label>Channel mix</label><select id="channel"><option>email-first</option><option>chat+email</option><option>omnichannel</option></select></div>
  <div class="card"><label>SLA strictness</label><select id="sla"><option>basic sla</option><option>moderate sla</option><option>strict sla</option></select></div>
  <div class="card"><label>Setup tolerance</label><select id="setup"><option>low setup</option><option>medium setup</option><option>high setup</option></select></div>
  <div class="card"><label>Budget</label><select id="budget"><option>lean budget</option><option>balanced budget</option><option>premium budget</option></select></div>
</div>
<p><button class="btn-primary" id="run">Get support stack profile</button></p>
<div id="out" class="card"><em>No profile yet.</em></div>
<p><small>Disclosure: recommendations are for education and planning. Final fit depends on your workflows, budget, and security/compliance requirements.</small></p>

<script define:vars={{ profiles }}>
const out = document.getElementById('out');
document.getElementById('run').addEventListener('click', () => {
  const vals = [
    document.getElementById('team').value,
    document.getElementById('channel').value,
    document.getElementById('sla').value,
    document.getElementById('setup').value,
    document.getElementById('budget').value
  ];
  const setupAlias = vals.map(v => v === 'low setup' ? 'low setup' : v === 'medium setup' ? 'medium setup' : v === 'high setup' ? 'high setup' : v);
  const normalized = setupAlias.map(v => v === 'low setup' ? 'low setup' : v === 'medium setup' ? 'medium setup' : v === 'high setup' ? 'high setup' : v)
    .map(v => v.replace('medium setup','medium setup').replace('high setup','high setup'));

  const score = profiles.map(p => ({ ...p, points: p.rules.filter(r => normalized.includes(r)).length })).sort((a,b) => b.points-a.points);
  const top = score[0];
  const links = {
    lean: '/money/best-helpdesk-live-chat-stack-for-small-teams',
    growth: '/money/intercom-vs-freshdesk-vs-helpscout-for-growing-support-teams',
    multi: '/money/best-helpdesk-stack-for-agencies-and-multi-brand-support'
  };

  out.innerHTML = `<h3>${top.label}</h3><p>Best fit based on your team shape, channel mix, and SLA constraints.</p><p><strong>Primary comparison:</strong> <a href="${links[top.id]}">Go to matching comparison page â†’</a></p><p><strong>Implementation prep:</strong> copy the <a href='/data/vendor-stack-evaluation-checklist-download'>vendor evaluation checklist</a> before demos.</p>`;
  if (typeof gtag === 'function') gtag('event', 'tool_complete', { tool_name: 'support_stack_picker', profile: top.id });
});
</script>

